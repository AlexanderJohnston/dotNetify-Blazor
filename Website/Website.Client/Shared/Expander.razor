@inject IStylesheet Stylesheet

<d-panel css="@Stylesheet["Expander"]">
    <d-collapsible collapsed="true" label="@Label">
        @ChildContent
    </d-collapsible>
</d-panel>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Label { get; set; }
}