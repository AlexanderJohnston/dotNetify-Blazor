<VMContext VM="RealTimePush" TState="HelloWorldState" OnStateChange="@HandleStateChange">
    <div>
        <p>@state?.Greetings</p>
        <p>Server time is: @state?.ServerTime</p>
    </div>
</VMContext>

@code {
   private HelloWorldState state;

   private class HelloWorldState
   {
       public string Greetings { get; set; }
       public string ServerTime { get; set; }
   }

   private void HandleStateChange(HelloWorldState newState)
   {
       state = newState;
       StateHasChanged();
   }
}